{
    "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
    "assist": {
        "actions": {
            "recommended": true,
            "source": {
                "organizeImports": "on",
                "recommended": true,
                "useSortedAttributes": "on"
            }
        },
        "enabled": true
    },
    "files": {
        "ignoreUnknown": false
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": true,
        "indentStyle": "space",
        "indentWidth": 2,
        "lineWidth": 80
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double"
        },
        "linter": {
            "enabled": true
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "useImportType": "error"
            }
        }
    },
    "vcs": {
        "clientKind": "git",
        "enabled": false,
        "useIgnoreFile": false
    }
}
